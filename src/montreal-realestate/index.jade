extends ../layouts/wrapper

block meta
  title Exploring Montreal Real Estate

block scripts
  script(src="/vendor/d3.min.js")
  script(src="/vendor/topojson.v1.min.js")
  script(src="/vendor/colorbrewer.js")
  script(src="/vendor/leaflet.js")
  script(src="scripts/events.js")
  script(src="scripts/map.js")

block styles
  link(rel='stylesheet', href='styles/map.css')
  link(rel="stylesheet", href="/vendor/leaflet.css")

block body
  #map
  .main-container
    #top.shadow.rounded-corners
      h1 Exploring Montreal Real Estate
      .top-spacer
      p
        | This map shows the data gathered from over 40,000 properties up for sale in
        | the Greater Montreal area in May 2014.
      h2
      #legend
        i.fa.fa-spinner.fa-spin.spinner
        svg#legendSVG
      .more-options
        i.fa.fa-chevron-down

      .data-container
        .data-title Map the following data
        .dataOption.active(data-id="data_points")
          .ib.data-color
          .desc.ib Properties for sale per sq.km.
          .clear
        .dataOption(data-id="avg_price")
          .ib.data-color
          .desc.ib Average property price
          .clear
        .dataOption(data-id="pp_foot")
          .ib.data-color
          .desc.ib Average price per square foot
          .clear
        .data-title Filter by property type
        .filterOption.active(data-id="house")
          .icon.ib
            i.fa.fa-check
          .desc.ib Homes
          .clear
        .filterOption.active(data-id="town")
          .icon.ib.town
            i.fa.fa-check
          .desc.ib.second Townhouses
          .clear
        .filterOption.active(data-id="condo")
          .icon.ib
            i.fa.fa-check
          .desc.ib Condominiums
          .clear


  #popover.shadow.rounded-corners
    .popover-content
      .title This is the title
      .subtitle This is the title
      .body
        .data-line
          #dataTitle.table-title
          #dataValue.table-value
          .clear
        .data-hline.data-hide-field
        .data-line.data-hide-field
          .table-title No. of Properties
          #dataPoints.table-value
          .clear
      .empty There is no data for this region
